@page "/editor"

@inherits PuzzleBase.Web.CodeBehind.EditorBase

@attribute [Authorize]

<EditForm Model="@FormModel" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />

    <div class="form-group row">
        <label class="col-sm-2 col-form-label" for="author">Author</label>

        <div class="col-sm-10">
            <InputText Class="form-control" @bind-Value="@FormModel.AuthorName" />
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label" for="content">Content</label>

        <div class="col-sm-10">
            <InputTextArea Class="form-control" @bind-Value="@FormModel.Content" rows="15" />
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label" for="content">Difficulty</label>

        <div class="col-sm-10">
            <InputNumber Class="form-control" @bind-Value="@FormModel.Difficulty" min="0" max="15" />
        </div>
    </div>

    <ValidationSummary />
    @if (!string.IsNullOrEmpty(ErrorMessage))
    {
        <ul class="validation-errors">
            <li class="validation-message">@ErrorMessage</li>
        </ul>
    }

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save Puzzle</button>
    </div>
</EditForm>